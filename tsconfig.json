{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@types": ["src/types/index.d.ts"],
      "@modules/*": [
        "src/modules/admin/*",
        "src/modules/marketer/*",
        "src/modules/client/*"
      ],
      "@entities/*": [
        "src/modules/admin/entities/*",
        "src/modules/marketer/entities/*",
        "src/modules/client/entities/*"
      ],
      "@enums/*": ["src/common/enums/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}
